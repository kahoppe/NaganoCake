<div class="container">
  <h4>商品詳細</h4>
  <tbody>
    <div class="mx-auto col-sm-10 col-lg-8 col-xl-6">
      <%# @items.each do |item| %>
        <div class="row">
          <ul>
            <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          </ul>
          <ul>
            <td>
              <div class="form-group">
                商品名
                <%= @item.name %>
              </div>
            </td>
            <td>
              <div class="form-group">
                商品説明
                <%= @item.introduction %>
              </div>
            </td>
            <td>
              <div class="form-group">
                ジャンル
                <%= @item.genre.name %>
              </div>
            </td>
            <td>
              <div class="form-group">
                <p>税込価格<br>
                (税抜価格)
                <%= @item.price %>円</p>
              </div>
            </td>
            <td>
              <div class="form-group">
                ステータス
                <%= @item.is_active %>
              </div>
            </td>
            <td>
              <div class="form-group">
                <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>
              </div>
            </td>
          </ul>
        </div>
      <%# end %>
    </div>
  </tbody>
</div>
