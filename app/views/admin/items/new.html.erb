<div class="container">
  <h4>商品新規登録</h4>
  <!--<div class="field btn btn-block">-->
  <%= form_with model: @item, url: admin_items_path, local:true do |f| %>

<div class="row justify-content-between">

  <div class="mx-auto col-sm-10 col-lg-8 col-xl-6">


<!--<div class="field btn btn-block">-->

      <div class="fotm-group">
        <%= f.label :image, "商品画像" %>
        <%= f.attachment_field :image %>
      </div>
      <div class="form-group">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, class: "col-3" %>
      </div>

      <div class="form-group">

        <%= f.label :introduction, "商品説明" %>

        <%= f.text_area :introduction %>
      </div>

      <div class="form-group">
        <div class="checkbox">
          <%= f.label :genre, "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :price, "税抜価格" %>
        <%= f.text_field :price, class:"flex-row" %><span>円</span>
      </div>

      <div class="form-group">

        <%= f.label :is_active, "販売ステータス" %>

        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中', value: 1 %>

        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中', value: 0 %>

      </div>

      <div class="form-group">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>

      </div>
      </div>
<!--</div>-->

    </div>
  <% end %>
</div>