<div class="container">

<h4>ジャンル編集</h4>
<%= form_with model: @genre, url: admin_genre_path, local:true do |f| %>
    <div class="row">

      <div class="form-group">
        <%= f.label :genre, "ジャンル名" %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>

    </div>

  <% end %>
</div>
