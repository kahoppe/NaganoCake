<div class="container">

  <h4>ジャンル一覧・追加</h4>
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <div class="row">

      <div class="form-group">
        <%= f.label :genre, "ジャンル名" %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>

    </div>
  <% end %>

  <div class="col-md-5 offset-md-1">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>

            <td>
              <%= genre.name %>
            </td>

            <td>
              <div class="form-group">
                <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </div>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
